        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="204dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/whitebox"
        android:orientation="vertical" >

       
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"          
        android:orientation="horizontal" >
        
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/un"
            android:text="Email"
            android:textColor="#ffffff" 
            android:textSize="18dp"/>
        
         <EditText
            android:id="@+id/emailtextboxsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="" 
            android:layout_marginLeft="7dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:editable="true"
            android:hint="email"
            android:background="@android:color/transparent"/>
        
        </LinearLayout>
          <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#C8C8C8" /> 
        
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"          
        android:orientation="horizontal" >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/pwdemail"
            android:text="Password"
            android:textColor="#ffffff" 
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/passwordsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="" 
            android:layout_marginLeft="7dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:editable="true"
            android:hint="password"
            android:password="true"
            android:background="@android:color/transparent"/>
        
        </LinearLayout>
        
      <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#C8C8C8" /> 
      
      
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"          
        android:orientation="horizontal" >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/pwdemail"
            android:text="FName"
            android:textColor="#ffffff" 
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/firstnamesignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="" 
            android:layout_marginLeft="7dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:editable="true"
            android:hint="first name"           
            android:background="@android:color/transparent"/>
        
        </LinearLayout>
        
       <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#C8C8C8" />
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"          
        android:orientation="horizontal" >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/name"
            android:text="LName"
            android:textColor="#ffffff" 
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/lastnamesignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="" 
            android:layout_marginLeft="7dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:editable="true"
            android:hint="last name"           
            android:background="@android:color/transparent"/>
        
        </LinearLayout>
      
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:layout_marginTop="15dp">
    <Button
                    android:id="@+id/signupcreate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"                   
                    android:background="@drawable/createbutton"
                    android:text="@string/create"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/camimagesignup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/picture"/>
        
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/thumbnail"
           android:layout_marginLeft="50dp"/>
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:layout_marginTop="10dp">
       
            
            <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alreadysignuptext"
      		android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/tapheresignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taptext" 
            android:layout_toRightOf="@id/already"
            android:textColor="#00008B"
            android:textStyle="bold"
            android:paddingLeft="7dp"/>
          </LinearLayout>
