<RelativeLayout       
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"         
        >
        
    <Button
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:background="#404040"
           android:layout_alignParentBottom="true"
           android:text="@string/secure" 
           android:textColor="#ffffff"
           android:paddingBottom="28dp" 
           android:textStyle="bold"/>
    
     <RelativeLayout       
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"         
        android:gravity="center_horizontal"> 
    <TextView
             android:id="@+id/seeour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See our"             
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
           />
    
     <TextView
           android:id="@+id/termssignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Terms of Services"              
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:autoLink="all"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/seeour"
            android:paddingBottom="10dp"
            android:textColor="#00008B"/>
      
      <TextView
            android:id="@+id/and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and"             
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/termssignup"
            android:paddingBottom="10dp"
            />
      
      <TextView
            android:id="@+id/privacypolicysignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Privacy Policy"             
            android:textColor="#00008B"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:autoLink="all"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/and"
            android:paddingBottom="10dp"/>
    
        </RelativeLayout>

</RelativeLayout>



</LinearLayout>